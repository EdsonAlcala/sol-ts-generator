{
  "name": "sol-ts-generator",
  "version": "1.0.2",
  "description": "Generate typescript type definitions from Ethereum smart contracts ABI that will allow you to write static typed Typescript tests in your Truffle projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --watch",
    "generate-ts-types": "sol-ts-generator --folder ./build --outdir ./types",
    "publish": "npm test && npm build",
    "build": "tsc",
    "publish-please": "publish-please",
    "prepublishOnly": "publish-please guard"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EdsonAlcala/sol-ts-generator.git"
  },
  "keywords": [
    "solidity",
    "typescript"
  ],
  "author": "Edson Alcala <edson_alcala@msn.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/glob": "^5.0.35",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.4",
    "jest": "^23.4.2",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "command-line-args": "^5.0.2",
    "publish-please": "^3.2.0"
  },
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
