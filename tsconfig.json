{
  "compilerOptions": {
    "target":
      "es5",
    "module":
      "commonjs",
    "lib": [
      "es5",
      "es2015"
    ],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
     "strictFunctionTypes": true,
     "alwaysStrict": true,                  
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true, 
    "esModuleInterop": true
},
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
